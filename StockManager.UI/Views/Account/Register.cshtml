@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form class="register-form" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4 id="register-panel-heading">Create a new account.</h4>
            <div class="panel panel-body">
                <div class="panel-body register-panel-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <div class="icon-addon">
                            <input asp-for="Email" placeholder="Email" class="form-control" />
                            <label for="Email" class="glyphicon glyphicon-envelope" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="icon-addon">
                            <input asp-for="UserName" placeholder="UserName" class="form-control" />
                            <label for="UserName" class="glyphicon glyphicon-log-in" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="icon-addon">
                            <input asp-for="Password" placeholder="Password" class="form-control" />
                            <label for="Password" class="glyphicon glyphicon-lock" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="icon-addon">
                            <input asp-for="ConfirmPassword" placeholder="Password" class="form-control" />
                            <label for="ConfirmPassword" class="glyphicon glyphicon-lock" />
                        </div>
                    </div>
                    <button type="submit" class="register-form-submit btn btn-primary">Register</button>
                </div>
            </div>            
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
