@using StockManager.Data.Data.Entities;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StockManager</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/login.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/login.css" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">StockManager</a>
            </div>
            <div class="navbar-collapse collapse">                        
                @if (SignInManager.IsSignedIn(User))
                {
                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Main Functions<span class="caret" /></a>
                                    <ul class="dropdown-menu">
                                        <li><a asp-area="" asp-controller="Warehouses" asp-action="Index">Warehouses</a></li>
                                        <li><a asp-area="" asp-controller="Shops" asp-action="Index">Shops</a></li>
                                        <li><a asp-area="" asp-controller="Suppliers" asp-action="Index">Suppliers</a></li>
                                        <li><a asp-area="" asp-controller="StockCode" asp-action="Index">Stock</a></li>
                                        <li><a asp-area="" asp-controller="Seasons" asp-action="Index">Seasons</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Warehouse Functions<span class="caret" /></a>
                                    <ul class="dropdown-menu">
                                        <li><a asp-area="" asp-controller="PurchaseOrders" asp-action="Index">Deliveries</a></li>
                                        <li><a asp-area="" asp-controller="WarehouseTransfers" asp-action="Index">Transfers</a></li>
                                        <li><a asp-area="" asp-controller="WarehouseAdjustments" asp-action="Index">Adjustments</a></li>
                                        <li><a asp-area="" asp-controller="WarehouseReturns" asp-action="Index">Returns</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Shop Functions<span class="caret" /></a>
                                    <ul class="dropdown-menu">
                                        <li><a asp-area="" asp-controller="" asp-action="">Deliveries</a></li>
                                        <li><a asp-area="" asp-controller="" asp-action="">Adjustments</a></li>
                                        <li><a asp-area="" asp-controller="" asp-action="">Transfers</a></li>
                                        <li><a asp-area="" asp-controller="" asp-action="">Returns</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">@User.Identity.Name<span class="caret" /></a>
                                    <ul class="dropdown-menu">
                                        <li><a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">User Settings</a></li>
                                        <li><a asp-area="" asp-controller="Settings" asp-action="Index" title="">Settings</a></li>
                                        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                                    </ul>
                                </li>                               
                            </ul>
                        </div>   
                    </form>
                 }
                 @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - StockManager(Darren Mark Hannay)</p>
        </footer>
    </div>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
